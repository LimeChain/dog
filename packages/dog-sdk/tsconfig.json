{
  "compilerOptions": {
    "outDir": "./dist",
    "allowJs": false,
    "noEmitOnError": false,
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2017"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}